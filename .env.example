# Environment configuration for WhatsApp Chat Analyzer

# Google AI API Key (required for threat detection)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Application settings
APP_DEBUG=false
LOG_LEVEL=INFO

# Analysis parameters
AI_MAX_CHARS=20000
AI_REQUEST_TIMEOUT=120
TOPIC_MODEL_COMPONENTS=5
MIN_TOPIC_MESSAGES=5

# UI Theme (dark or light)
DEFAULT_THEME=dark
